<UserControl x:Class="ImageRotater.OrthogonalViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleText" Grid.Row="0"
                   FontSize="14" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,4"
                   Foreground="#00C8FF"/>

        <Grid Grid.Row="1" Background="Black" ClipToBounds="True">
            <Image x:Name="SliceImage" Stretch="Uniform"
                   RenderTransformOrigin="0.5,0.5"/>
            <Canvas x:Name="OverlayCanvas"
                    Background="Transparent"
                    MouseLeftButtonDown="OnMouseDown"
                    MouseMove="OnMouseMove"
                    MouseLeftButtonUp="OnMouseUp"
                    SizeChanged="OnCanvasSizeChanged"/>
        </Grid>

        <Slider x:Name="SliceSlider" Grid.Row="2"
                Minimum="0" Maximum="0" Value="0"
                IsSnapToTickEnabled="True" TickFrequency="1"
                ValueChanged="OnSliderChanged"
                Margin="4,2"/>

        <TextBlock x:Name="InfoLabel" Grid.Row="3"
                   HorizontalAlignment="Center" Margin="0,2,0,4"
                   Foreground="#CCCCCC" FontSize="11"
                   FontFamily="Consolas"/>
    </Grid>
</UserControl>
