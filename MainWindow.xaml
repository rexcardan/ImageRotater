<Window x:Class="ImageRotater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ImageRotater"
        Title="CT Image Rotater"
        WindowState="Maximized"
        Background="#1E1E1E"
        MinWidth="900" MinHeight="500">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" Background="#2D2D2D">
            <Button x:Name="LoadButton" Content="  Load CT Folder  "
                    Click="OnLoadClick" Padding="12,6" Margin="4,2"
                    FontSize="13" Foreground="White"/>
            <Separator Margin="8,0"/>
            <Button x:Name="FinalizeButton" Content="  Finalize  "
                    Click="OnFinalizeClick" Padding="12,6" Margin="4,2"
                    FontSize="13" Foreground="White" IsEnabled="False"/>
        </ToolBar>

        <StatusBar DockPanel.Dock="Bottom" Background="#252525">
            <TextBlock x:Name="StatusText"
                       Text="Ready. Click 'Load CT Folder' to begin."
                       Foreground="#AAAAAA" FontSize="12" Margin="4,2"/>
        </StatusBar>

        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:OrthogonalViewControl x:Name="AxialView" Grid.Column="0"/>
            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch"
                          Background="#333333"/>
            <local:OrthogonalViewControl x:Name="SagittalView" Grid.Column="2"/>
            <GridSplitter Grid.Column="3" Width="4" HorizontalAlignment="Stretch"
                          Background="#333333"/>
            <local:OrthogonalViewControl x:Name="CoronalView" Grid.Column="4"/>
        </Grid>
    </DockPanel>
</Window>
